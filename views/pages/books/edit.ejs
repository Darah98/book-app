<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>edit</title>
    <link rel="stylesheet" href="../styles/reset.css">
    <link rel="stylesheet" href="../styles/base.css">

  </head>
  <body>
    <section>
      <button class="form-showing">Edit Saved Book Info</button>
      <form
        action="/update/<%= details.id%>?_method=put"
        method="POST"
        class="info"
      >
        <input type="text" name="title" value="<%=details.title%>" />
        <input type="text" name="author" value="<%=details.author%>" />
        <input
          type="text"
          name="description"
          value="<%=details.description%>"
        />
        <input type="text" name="isbn" value="<%=details.isbn%>" />

        <select name="bookshelf" id="">
          <% details2.forEach(val=>{ %>
            <option class="option" value="<%= val.bookshelf%>"><%= val.bookshelf%></option>
          <% }) %>
        </select>
        <button class="detailsbtn">Update</button>
      </form>
        <form action="/delete/<%=details.id%>?_method=put" method="POST">
          <button class="detailsbtn">Delete</button>
        </form>
      </input>
    </section>
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="../app.js"></script>
  </body>
</html>
